<div id="user-id" data-user-id="<%= current_user.id %>"></div>

<div class="container-fluid">
  <div class="row">
    <div class="col-3 rooms-sidebar">
      <div class="card no-outline">
        <div class="card-body">
          <small>Logged in as</small><br>
          <b><%= current_user.email %><br></b>
          <%= button_to(
                "Log Out",
                destroy_user_session_path,
                method: :delete
              ) %>
        </div>
        <div class="card-body">
          <%= button_to(
                "Profiles",
                profiles_path,
                method: :get
              ) %>
        </div>
      </div>
    </div>
    <div class="col-9">
        <div class="chat-room">
          <div id="messages">
            <% @messages.each do |message| %>
              <%= render 'chats/message', message: message %>
            <% end %>
          </div>
          <div class="chat-box">
            <%= render 'chats/form', message: Message.new %>
          </div>
        </div>
    </div>
  </div>
</div>